<!DOCTYPE html>
<head>
<title>Todo App</title>
<link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
<div class="todo-container">
<h2>To-Do List</h2>
<div class="todo">
  <!-- Users can add new Todo items here -->
<form action="/" method="POST" class="todo-header">   <!-- Use the safer POST method to upload form data-->
<input type="text" name="content">
<button type="submit"><span class="fas fa-plus"></span></button>
</form>
  <!-- Uses a template engine to write a for loop to show each Todo item -->
<ul class="todo-list">
  <% todoTasks.forEach(details => { %>
  <li class="todo-list-item">
  <div class="todo-list-item-name"><%= details.content %></div>   <!-- Display details -->
  <a href="/edit/<%= details._id %>" class="edit">   <!-- Allow editing -->
  <span class="fas fa-edit"></span>
  </a>
  <a href="/remove/<%= details._id %>" class="remove">   <!-- Allow removing-->
  <span class="fas fa-times"></span>
  </a>
  </li>
  <% }) %>
  </ul>
</div>
</div>
</body>